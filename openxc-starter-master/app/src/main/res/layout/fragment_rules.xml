<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_rules"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c1c5d6">

    <Switch
        android:id="@+id/switch_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textColor="#5a5b62"
        android:text="Enable Custom Rules"
        android:checked="false" />

    <EditText
        android:id="@+id/vSpeedInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_rules"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Max Vehicle Speed (KM/H)" />

    <EditText
        android:id="@+id/engInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vSpeedInput"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Max Engine Speed (RPM)" />

    <EditText
        android:id="@+id/accelInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:inputType="number"
        android:ems="10"
        android:hint="Max Acceleration (0-100%)" />

    <Button
        android:id="@+id/but_done"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="79dp"
        android:layout_marginEnd="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/switch_rules"
        android:text="Set rules" />


</RelativeLayout>
